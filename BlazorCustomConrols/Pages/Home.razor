@page "/"
@using BlazorCustomConrols.ViewModels

<EditableDropdownField Label="Select Country"
                       Class="col-md-6"
                       Items="@(ViewModel.Countries)"
                       @bind-SelectedValue="@(ViewModel["SelectedCountry"])"
                       IsReadOnly="@IsReadOnlyMode" />

<p>Selected Country: @ViewModel["SelectedCountry"]</p>

<EditableInputField Label="First Name"
                    Class="col-md-6"
                    @bind-Value="@(ViewModel.FirstName)"
                    IsReadOnly="@IsReadOnlyMode" />

<EditableInputField Label="Last Name"
                    Class="col-md-6"
                    @bind-Value="@(ViewModel["LastName"])"
                    IsReadOnly="@IsReadOnlyMode" />

<p>Full Name: @ViewModel.FullName</p>

<EnumDropdownField TEnum="StatusEnum"
                   Label="Select Status"
                   @bind-SelectedValue="ViewModel.Status"
                   IsReadOnly="false" />

<p>Selected Status: @ViewModel.Status</p>

<DateInputField Label="Select Date"
                @bind-Value="ViewModel.DateOfBirth"
                IsReadOnly="false" />

<p>Selected Date: @ViewModel.DateOfBirth.ToString("yyyy-MM-dd")</p>


<!--Test Number input-->
<EditableNumberField Label="Signed Integer Value"
                     @bind-Value="SignedValue"
                     IsUnsigned="false"
                     Class="col-md-6"
                     IsReadOnly="IsReadOnlyMode" />

<EditableNumberField Label="Unsigned Integer Value"
                     @bind-Value="UnsignedValue"
                     IsUnsigned="true"
                     Class="col-md-6"
                     IsReadOnly="IsReadOnlyMode" />

<EditableNumberField Label="Decimal Value"
                     @bind-Value="DecimalValue"
                     Class="col-md-6"
                     IsReadOnly="IsReadOnlyMode" />

<EditableNumberField Label="Double Value"
                     @bind-Value="DoubleValue"
                     Class="col-md-6" 
                     IsReadOnly="IsReadOnlyMode"/>


<!---->
@code {
    private HomeViewModel ViewModel = new();
    private bool IsReadOnlyMode = false;
    private int SignedValue { get; set; }
    private uint UnsignedValue { get; set; }
    private decimal DecimalValue { get; set; }
    private double DoubleValue { get; set; }
}
