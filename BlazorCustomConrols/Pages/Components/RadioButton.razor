<style>
    .radio-button {
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .circle-container {
        width: 20px;
        height: 20px;
        border: 2px solid #ccc;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-right: 10px;
    }

    .circle {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: transparent;
        transition: background-color 0.3s ease;
    }

    .circle.selected {
        background-color: #4caf50;
    }

    .label {
        font-size: 16px;
        color: #333;
    }

</style>
<div class="radio-button" @onclick="HandleClick">
    <div class="circle-container">
        <div class="circle @(IsSelected ? "selected" : "")"></div>
    </div>
    <span class="label">@Label</span>
</div>

@code {
    [CascadingParameter] public RadioGroup? ParentGroup { get; set; }

    [Parameter] public string Value { get; set; } = string.Empty;
    [Parameter] public string Label { get; set; } = string.Empty;

    private bool IsSelected => ParentGroup?.SelectedValue == Value;

    private async Task HandleClick()
    {
        if (ParentGroup != null)
        {
            await ParentGroup.SelectValue(Value);
        }
    }
}
